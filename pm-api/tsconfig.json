{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@mocks/*": ["src/mocks/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@dtos/*": ["src/dtos/*"],
            "@schemas/*": ["src/schemas/*"]
        }
    },
    "exclude": ["node_modules"]
}
